<resources>
    <!-- stile generale per la app -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

    <style name="activityStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- stile per l'AlertDialog della DriveActivity -->
    <style name = "dialogFragment" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/buttonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/buttonStyle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Stile per i bottoni -->
    <style name="buttonStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!-- Stile per i frame inferiori -->
    <style name="lowerFrameStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/backgroundColorFrame</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintTop_toTopOf">@+id/guideline_half</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <!-- Stile per il frame superiore -->
    <style name="upperFrameStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/whiteColor</item>
    </style>

    <!-- Stile per le immagini -->
    <style name="imageStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="seekBarStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:max">100</item>
        <item name="android:progress">50</item>
        <item name="android:progressBackgroundTint">@color/whiteColor</item>
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="tickMarkTint">@color/colorPrimaryDark</item>
    </style>
</resources>